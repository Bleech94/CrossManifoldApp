<?xml version='1.0' encoding='utf-8'?>
<widget id="com.crossmanifold.crossmanifold" version="0.9.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>CrossManifold</name>
    <description>
        The official Cross Manifold mobile application.
    </description>
    <author email="bleech94@gmail.com" href="http://www.ultra-fin.com/">
        Brandon Leech
    </author>
    <content src="index.html" />

    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <splash src="splash.png" />

    <platform name="android">
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
        <!-- TODO: Get final icons -->
        <icon src="res/icon/icon-36-ldpi.png" density="ldpi" />
        <icon src="res/icon/icon-48-mdpi.png" density="mdpi" />
        <icon src="res/icon/icon-72-hdpi.png" density="hdpi" />
        <icon src="res/icon/icon-96-xhdpi.png" density="xhdpi" />
        <icon src="res/icon/icon-144-xxhdpi.png" density="xxhdpi" />
        <icon src="res/icon/icon-192-xxxhdpi.png" density="xxxhdpi" />

        <!-- TODO: Get final splash screens -->
        <splash src="res/screen/drawable-ldpi/splash.png" qualifier="port-ldpi"/>
        <splash src="res/screen/drawable-mdpi/splash.png" qualifier="port-mdpi"/>
        <splash src="res/screen/drawable-hdpi/splash.png" qualifier="port-hdpi"/>
        <splash src="res/screen/drawable-xhdpi/splash.png" qualifier="port-xhdpi"/>
    </platform>

    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />

        <!-- TODO: Fix
        <splash src="res/screen/ios/screen-iphone-portrait.png" width="320" height="480"/>
        <splash src="res/screen/ios/screen-iphone-portrait-2x.png" width="640" height="960"/>
        <splash src="res/screen/ios/screen-iphone-portrait-568h-2x~iphone.png" width="640" height="1136"/>
        <splash src="res/screen/ios/screen-iphone-portrait-667h.png" width="750" height="1334"/>
        <splash src="res/screen/ios/screen-iphone-portrait-736h.png" width="1242" height="2208"/>
        -->
    </platform>

    <preference name="DisallowOverscroll" value="true" />
    <preference name="SplashScreen" value="screen" />
    <preference name="ShowSplashScreenSpinner" value="false" />

    <plugin name="cordova-plugin-device" spec="1.1.3" source="npm" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" /> <!-- TODO: Change so only pubnub allowed? -->
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
    <plugin name="ionic-plugin-keyboard" spec="2.2.1" source="npm" />
    <plugin name="cordova-plugin-sqlite-2" spec="1.0.4" source="npm"/>
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.0" />
</widget>
